doctype html
html
  head
    include ../views/includes/head.pug
    style.
      body {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        background-color: red;
        margin: 0;
      }
      main {
        flex: 1;
      }
      footer {
        background-color: #ffc107;
        color: white;
        text-align: center;
        padding: 1rem;
      }
      a {
        text-decoration: none;
      }
      .hidden {
        display: none;
      }
      .spinner-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        background-color: rgba(255, 255, 255, 0.8);
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        z-index: 9999;
      }
  body
    #spinner-container.spinner-container
      .spinner-border(role="status")
        span.visually-hidden Loading...

    include ../views/includes/nav.pug

    main.container-fluid.my-1
      .row
        .col-auto.me-auto
          ul.list-group.rounded-3.mb-5
            li.list-group-item
              h1 Übungsinhalte
              hr
            li.list-group-item
              a(href="") Test
            li.list-group-item
              a(href="") Lückentext
            li.list-group-item
              a(href="") Weitere Übung
            li.list-group-item
              a(href="") Noch eine Übung
        .col.mb-5.my-5
          include ../views/includes/quiz.pug

    include ../views/includes/footer.pug

    script.
      document.addEventListener('DOMContentLoaded', function() {
        document.getElementById('spinner-container').style.display = 'none';
      });
