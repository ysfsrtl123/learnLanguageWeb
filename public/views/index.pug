doctype html
html(lang="de")
  block content
    include ../views/includes/head.pug
    style.
      body {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        background-color: red;
      }
      main {
        flex: 1;
      }
      footer {
        background-color: #ffc107;
        color: white;
      }
      a {
        text-decoration: none;
      }
      .hidden {
        display: none;
      }
      .spinner-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        background-color: rgba(255, 255, 255, 0.8);
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        z-index: 9999;
      }
      .carousel-container {
        display: flex;
        flex-direction: column;
        width: 100%;
      }

    body
      #spinner-container.spinner-container
        .spinner-border(role="status")
          span.visually-hidden Loading...

      block content
        include ../views/includes/nav.pug
        .container-fluid.my-1
          .row
            .col-auto.me-auto
              ul.list-group.rounded-3.mb-5
                li.list-group-item
                  h1 Die Inhalte
                  hr
                li.list-group-item
                  a(href="") Die Nachrichten
                li.list-group-item
                  a(href="") Wie lernt man Deutsch?
                li.list-group-item
                  a(href="") Wer sind wir?
